{
  "name": "@mermaid/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:local": "turso dev --dbfile local.db",
    "db:push": "bun --env-file=../../apps/web/.env run drizzle-kit push",
    "db:studio": "bun --env-file=../../apps/web/.env run drizzle-kit studio",
    "db:generate": "bun --env-file=../../apps/web/.env run drizzle-kit generate",
    "db:migrate": "bun --env-file=../../apps/web/.env run drizzle-kit migrate"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
