{
  "name": "mermaid",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.0.2",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "@prisma/client": "^6.15.0",
      "ai": "^5.0.49",
      "@ai-sdk/google": "^2.0.13",
      "better-auth": "^1.3.28",
      "@polar-sh/better-auth": "^1.1.3",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "install:fix": "bun install --ignore-scripts && bun run db:generate",
    "postinstall": "bun run db:generate && bun run db:migrate",
    "vercel-build": "bun run db:generate && bun run db:migrate",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @mermaid/db db:push",
    "db:studio": "turbo -F @mermaid/db db:studio",
    "db:generate": "turbo -F @mermaid/db db:generate",
    "db:migrate": "turbo -F @mermaid/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "immer": "^10.2.0",
    "nitro": "^3.0.1-alpha.0",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "bun@1.2.21"
}
